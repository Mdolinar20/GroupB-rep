@model IEnumerable<GroupB_Project.Models.Plans>

<div class="container p-3">
    <div class="row pt-4">
        @*header*@
        <div class="row pt-6">
            <div class="row pt-12">
                <h2 class="text-primary text-center ">Upcomming Sessions</h2>
            </div>
        </div>
        <br />
        @**@
        <div class="row pt6">
            <div class=" col-6">
                <a class="btn btn-dark w-100 text-right" asp-area="" asp-controller="Plans" asp-action="Inputs">Schedule a Session</a>

            </div>
        </div>

    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="container p-3">

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Subject</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plan in Model)
                {
                    <tr>
                        <td>@plan.hours</td>
                        <td>@plan.subject</td>
                    </tr>
                }



            </tbody>
        </table>

    </div>
}
else
{
        <h2>No Upcomming Sessions</h2>
}